                        icon: 'application'
                        BoxLayout:
                            orientation: 'vertical'
                            padding: 10, 40
                            MDCard:
                                orientation: 'vertical'
                                size_hint: .9,.6
                                padding: 10
                                pos_hint: {'top':.8, 'right':.95}
                                elevation: 10
                                MDLabel:
                                    text:'Choose the type of insurance you want.'
                                    font_size: 20
                                    size_hint_y: .1
                                MDLabel:
                                    text: ''
                                    size_hint_y:.05
                                BoxLayout:
                                    size_hint_y:.4
