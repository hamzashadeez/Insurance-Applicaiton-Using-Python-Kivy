                                    padding: 1, 30
                                    GridLayout:
                                        cols: 2
                                        MDCheckbox:
                                            group: 'h'
                                            on_active: app.active('life')
                                        MDLabel:
                                            text: 'LIFE'
                                        MDCheckbox:
                                            group: 'h'
                                            on_active: app.active('property')
                                        MDLabel:
                                            text: 'PROPERTY'
                                        MDCheckbox:
                                            group: 'h'
                                            on_active: app.active('car')
                                        MDLabel:
                                            text: 'CAR'
                                        MDCheckbox:
                                            group: 'h'
                                            on_active: app.active('medical')
                                        MDLabel:
                                            text: 'MEDICAL'
                                MDLabel:
                                    text: ''
                                    size_hint_y: .1
                                MDRaisedButton:
                                    text: 'APPLY'
                                    size_hint: 1,.08
                                    on_release: app.apply()


                    MDBottomNavigationItem:
                        name: 'files1'
                        text: 'Profile'
                        icon: 'account'
                        BoxLayout:
                            padding: 15
                            MDCard:
                                size_hint: 1,1
                                spacing:10
                                orientation: 'vertical'
                                BoxLayout:
                                    size_hint_y: .1
                                    MDRaisedButton:
                                        text: 'Insurance Added'
                                        size_hint_x: 1
                                ScrollView:
                                    size_hint_y: .9
                                    do_scroll_x: False
                                    MDList:
                                        spacing:10
                                        # size_hint_y: None
                                        # height: self.minimum_height
                                        # size_hint: 1,1
                                        id: liste
                                        
                    MDBottomNavigationItem:
                        name: 'files2'
                        text: 'Pay'
                        icon: 'cash-multiple'
                        FloatLayout:
                            MDCard:
                                orientation: 'vertical'
                                size_hint: .9, .9
                                elevation: 14
                                spacing: 5
                                pos: 20, 30
                                Image:
                                    source: 'card.png'
                                    allow_stretch: True
                                    keep_ratio: False
                                    size_hint_y: .4
                                BoxLayout:
                                    orientation:'vertical'
                                    size_hint_y: .6
                                    padding: 10
                                    spacing: 10
                                    MDTextField:
                                        hint_text:'Card Number..'
                                        required: True
                                        helper_text: "16-digits numbers "
                                        helper_text_mode: "persistent"

                                    MDTextField:
                                        hint_text:'THRU VALID'
                                        required: True
                                        helper_text: "E.g 12/21 "
                                        helper_text_mode: "persistent"
                                    MDTextField:
                                        hint_text:'435'
                                        required: True
                                        helper_text: "3 digits for the other card side"
                                        helper_text_mode: "persistent"
                                    
                                    MDRaisedButton:
                                        text: 'PAY FOR IT'
                                        size_hint_x: 1
                                        on_release: app.pay()
                    MDBottomNavigationItem:
                        name: 'files3'
                        text: 'About'
                        icon: 'account-card-details-outline'
                        FloatLayout:
